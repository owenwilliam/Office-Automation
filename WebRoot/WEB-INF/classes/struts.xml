<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

  <!--   <constant name="struts.enable.DynamicMethodInvocation" value="false" /> -->
   <!-- 配置为开发模式，改动时不需要重启服务器 -->
    <constant name="struts.devMode" value="true" />
    <!-- 把扩展名配置为action,使用时必须为xx.action -->
    <constant name="struts.action.extension" value="action"/>
  <!-- 把主题配置为simple，也就是说页面固定不能更改 -->
  <constant name="struts.ui.theme" value="simple"/>
    <package name="default" namespace="/" extends="struts-default">

      <!-- 配置测试Action，未与Spring整合，class属性写类的命名
      <action name="test" class="com.linjw.myoa.test.TestAction">
         <result name="success">/test.jsp</result>
      </action>
       -->
       <!-- 当Struts2与Spring整合后，class属性就可以写bean的名称 -->
        <action name="test" class="testAction">
         <result name="success">/test.jsp</result>
      </action>
      
      
      <!-- 岗位管理 -->
      
      <action name="station_*" class="stationAction" method="{1}">
      <result name="list">/WEB-INF/jsp/stationAction/list.jsp</result>
     <result name="addUI">/WEB-INF/jsp/stationAction/addUI.jsp</result>
     <result name="editUI">/WEB-INF/jsp/stationAction/editUI.jsp</result>
     <result name="toList" type="redirectAction">station_list</result>
     
      </action>
      
      <!-- 部门管理 -->
       <action name="department_*" class="departmentAction" method="{1}">
      <result name="list">/WEB-INF/jsp/departmentAction/list.jsp</result>
     <result name="addUI">/WEB-INF/jsp/departmentAction/addUI.jsp</result>
     <result name="editUI">/WEB-INF/jsp/departmentAction/editUI.jsp</result>
     <result name="toList" type="redirectAction">department_list</result>
     
      </action>
    </package>


</struts>
