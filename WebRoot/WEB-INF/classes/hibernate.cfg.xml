<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>

	<!-- 数据库连接 -->
	<!--  Spring 已声明
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/myoa</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property> -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>

	<!-- 其它设置 -->

	<!-- Echo all executed SQL to stdout -->
	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	<property name="hbm2ddl.auto">update</property>

	<!-- 导入JBPM4.4的映射文件 -->
	<mapping resource="jbpm.repository.hbm.xml" />
	<mapping resource="jbpm.execution.hbm.xml" />
	<mapping resource="jbpm.history.hbm.xml" />
	<mapping resource="jbpm.task.hbm.xml" />
	<mapping resource="jbpm.identity.hbm.xml" />

	<!-- 导入映射文件 -->
	<!-- Drop and re-create the database schema on startup
		<property name="hbm2ddl.auto">update</property>
	-->
	<mapping resource="com/linjw/myoa/model/User.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Station.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Department.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Privilege.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Forum.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Reply.hbm.xml" />
	<mapping resource="com/linjw/myoa/model/Topic.hbm.xml" />
	<mapping
		resource="com/linjw/myoa/model/ApplicationTemplate.hbm.xml" />

</session-factory>

</hibernate-configuration>