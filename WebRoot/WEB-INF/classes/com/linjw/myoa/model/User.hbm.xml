<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.linjw.myoa.model">
  <class table="t_user" name="User">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="loginName"/>
    <property name="password"/>
    <property name="name"/>
    <property name="gender"/>
    <property name="phoneNumber"/>
    <property name="email"/>
    <property name="description"/>
    <property name="img_path"/>
    
    <!-- department属性，本类与Department的多对一 -->
    <many-to-one name="department" class="Department" column="departmentId"></many-to-one>
   
   
     <!-- stations属性，本类与Station的多对多 -->   
     <set name="stations" table="station_user" lazy="false">
       <key column="userId"></key>
      <many-to-many class="Station" column="stationId"></many-to-many>
     </set> 
     
     <!-- topics属性，本类与Topic的一对多 -->
     <set name="topics" cascade="delete">
       <key column="authorId"></key>
       <one-to-many class="Topic"/>
     </set>
     <!-- replies属性，本类与Reply的一对多 -->
      <set name="replies" cascade="delete">
       <key column="authorId"></key>
       <one-to-many class="Reply"/>
     </set>
      <!-- applications属性，本类与Application的一对多 -->
       <set name="applications" cascade="delete">
       <key column="applicantId"></key>
       <one-to-many class="Application"/>
     </set>
     <!-- approveInfos属性，本类与ApproveInfo的一对多 -->
      <set name="approveInfos" cascade="delete">
       <key column="approverId"></key>
       <one-to-many class="ApproveInfo"/>
     </set>
  </class>
</hibernate-mapping>
