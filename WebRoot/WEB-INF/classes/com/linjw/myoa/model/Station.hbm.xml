<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.linjw.myoa.model">
  <class table="t_Staiton" name="Station">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="name"/>
    <property name="description"/>
    
    <!-- users属性，本类与user的多对多 -->
    <set name="users" table="station_user">
     <key column="stationId"></key>
      <many-to-many class="User" column="userId"></many-to-many>
    </set>
    
    <!-- privileges属性，本类与Privilege的多对多 -->
    <set name="privileges" table="station_privilege" lazy="false">
     <key column="stationId"></key>
     <many-to-many class="Privilege" column="privilegeId"></many-to-many>
    </set>
  </class>
</hibernate-mapping>
